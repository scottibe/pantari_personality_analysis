  </ul>

  <h3>Here are <%=@analysis.author%>'s words.</h3>
    <textarea form="text_form" name="text_analysis" cols="30" rows="15"><%=@analysis.person_text.gsub("���", "'")%> </textarea><br>

  <input type="submit" class="btn btn-lg btn-default" form="text_form" value="Submit Author Change"><br>                         

